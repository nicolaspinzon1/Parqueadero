---
export interface Props {
  title: string;
  value: string | number;
  icon: string;
  iconColor: 'blue' | 'green' | 'yellow' | 'red' | 'purple';
  subtitle?: string;
}

const { title, value, icon, iconColor, subtitle } = Astro.props;

const iconColorClasses = {
  blue: 'text-blue-600',
  green: 'text-green-600',
  yellow: 'text-yellow-600',
  red: 'text-red-600',
  purple: 'text-purple-600'
};
---

<div class="bg-white rounded-lg shadow p-6">
  <div class="flex items-center justify-between mb-2">
    <h3 class="text-sm font-medium text-gray-600">{title}</h3>
    <svg class={`h-4 w-4 ${iconColorClasses[iconColor]}`} fill="currentColor" viewBox="0 0 20 20">
      <path fill-rule="evenodd" d={icon} clip-rule="evenodd"></path>
    </svg>
  </div>
  <div class="text-2xl font-bold text-gray-900">{value}</div>
  {subtitle && <p class="text-xs text-gray-500 mt-1">{subtitle}</p>}
</div>