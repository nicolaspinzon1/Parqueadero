---
// src/components/navigation/Sidebar.astro
export interface Props {
  appName?: string;
  currentPage?: string;
}

const { appName = "Parqueadero El PIJAO", currentPage = "dashboard" } = Astro.props;

const menuItems = [
  {
    id: "dashboard",
    name: "Dashboard",
    href: "/",
    icon: "M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"
  },
  {
    id: "records",
    name: "Registros",
    href: "/registro",
    icon: "M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
  },
  {
    id: "history",
    name: "Historial",
    href: "/historial",
    icon: "M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"
  },
  {
    id: "rates",
    name: "Tarifas",
    href: "/tarifas",
    icon: "M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"
  },
  
];

const isActive = (itemId: string) => itemId === currentPage;
---

<aside class="w-64 bg-gray-700 text-white">
    <div class="p-4">
        <h1 class="text-xl font-bold">{appName}</h1>
    </div>
    <nav class="mt-8">
        <ul class="space-y-2">
            {menuItems.map(item => (
                <li>
                    <a 
                        href={item.href} 
                        class={`flex items-center px-4 py-2 rounded-md mx-2 transition-colors ${
                            isActive(item.id) 
                                ? 'text-white bg-gray-800' 
                                : 'text-blue-200 hover:text-white hover:bg-gray-800'
                        }`}
                    >
                        <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 20 20">
                            <path d={item.icon}/>
                        </svg>
                        {item.name}
                    </a>
                </li>
            ))}
        </ul>
    </nav>
</aside>